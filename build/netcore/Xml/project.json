{
  "version": "1.0.0-*",

    "dependencies": {
        "NETStandard.Library": "1.6.0",
        "System.Xml.XmlDocument": "4.0.1" 
    },

  "frameworks": {
    "netstandard1.6": {
        "imports": "dnxcore50",
        "buildOptions": {
            "compile": {
                "include": [ "../../../*.cs", "../../../src/Xml/**/*.cs" ],
                "excludeFiles": [ "../../../src/Xml/System.Xml.Serialization/FromXml.cs", "../../../src/Xml/System.Xml.Serialization/ToXml.cs" ]
            },
            "embed": {
                "include": [ "../../../src/Xml/*.resx" ]
            },
            "define": [ "NetCore" ],
            "keyFile": "../../../FluentMethods.snk",
            "xmlDoc": true,
            "outputName": "FluentMethods.Xml"
        }
    }
  }
}
